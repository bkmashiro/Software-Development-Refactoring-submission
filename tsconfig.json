{
  "compilerOptions": {
    "target": "ES2021", 
    "module": "CommonJS",
    "outDir": "./dist", 
    "rootDir": "./",
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, 
    "noImplicitAny": false,
    "types": [
      "node",
    ]
  },
  "include": [
    "./**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
